<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <rotate
        android:duration="50"
        android:fromDegrees="-3"
        android:toDegrees="3"
        android:pivotX="50%"
        android:pivotY="50%"
        android:repeatCount="3"
        />
    <translate
        android:duration="50"
        android:fromXDelta="3"
        android:toXDelta="-3"
        android:repeatCount="3"
        />

</set>